div(class="col col-lg-3 col-md-3 card")
    div(class="three-card")
        a(href=`goods?id=${val["id"]}`)
            h5(class="card-title text-center") #{val["name"]}
            div(class="three-card-img")
                img(
                    src=`./img/${val["image"]}`
                    )
            p(class="text-center") #{val["cost"].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, "$& ")} $
    ul(class="card-actions")
        li
            button(
                data-goods_id = val["id"]
                class="button-success add-to-card"
            ) to card

